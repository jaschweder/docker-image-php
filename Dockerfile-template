FROM {IMAGE_FROM}

MAINTAINER Jonathan A. Schweder "jonathanschweder@gmail.com"

############################################################################
#                                   Nginx                                  #
############################################################################

COPY ./nginx-vh-default /etc/nginx/sites-available/default

RUN rm -rf /var/www/* \
    && composer create-project laravel/laravel \
    --prefer-source \
    --no-interaction \
    --working-dir=/var www
