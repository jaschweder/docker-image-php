FROM {IMAGE_FROM}

MAINTAINER Jonathan A. Schweder "jonathanschweder@gmail.com"

############################################################################
#                                 ffmpeg                                   #
############################################################################

RUN mkdir -p /usr/src \
    && cd /usr/src \
    && git clone -b n3.2.7 --depth 1 --single-branch https://github.com/ffmpeg/ffmpeg \
    && cd ffmpeg \
    && ./configure \
    --enable-libmp3lame \
    --enable-gpl \
    --enable-libx264 \
    --enable-shared \
    --disable-static \
    && make all -j$(nproc) \
    && make install
