server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www;

	index index.php index.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
        include fastcgi_params;
		fastcgi_pass unix:/run/php-fpm.sock;
	}

	location ~ /\.ht {
		deny all;
	}

    location ~* .(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 365d;
    }
}
